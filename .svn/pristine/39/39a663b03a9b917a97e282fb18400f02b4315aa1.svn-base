{% extends 'base.html' %}
{% load pagination_tags %}
{% block content %}
{% autopaginate article_list 6 %}
	{% for article in article_list %}
		<hr class="featurette-divider">
		<div class="row featurette">
        	<div class="col-md-8 col-md-push-4">
				<h2 class="featurette-heading"><a href="{% url 'blog.views.article_detail' pk=article.pk %}">{{ article.title }}</a><span class="text-muted">See for yourself.</span></h2>
				<p>published: {{ article.published_date| date:'Y-m-d' }}</p>
				<p class="lead">{{ article.text | striptags | truncatechars:100 }}</p>
			</div>
			<div class="col-md-4 col-md-pull-8">
          		<img class="featurette-image img-responsive center-block" data-src="holder.js/500x500/auto" alt="Generic placeholder image">
        	</div>
		</div>
	{% endfor %}
{% paginate %}
{% endblock %}