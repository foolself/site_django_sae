{% extends 'base.html' %}
{% load pagination_tags %}
{% block content %}
{% autopaginate article_list 6 %}
	{% for article in article_list %}
		<hr class="featurette-divider">
		<div class="row featurette">
        	<div class="col-md-8 col-md-push-4">
				<h2 class="featurette-heading"><a href="{% url 'blog.views.article_detail' pk=article.pk %}">{{ article.title }}</a></h2>
				<p>published: {{ article.published_date| date:'Y-m-d' }}</p>
				<p class="lead">{{ article.text | striptags | truncatechars:100 }}</p>
			</div>
			<div class="col-md-4 col-md-pull-8">
          		<img class="featurette-image img-responsive center-block" src="{{ article.imageURL}}" alt="Generic placeholder image">
        	</div>
		</div>
	{% endfor %}
{% paginate %}
<button type="button" class="btn btn-default btn-lg">
  <span class="glyphicon glyphicon-star" aria-hidden="true"></span> Star
</button>
glyphicon glyphicon-home
glyphicon glyphicon-remove
glyphicon glyphicon-thumbs-up
glyphicon glyphicon-plus
glyphicon glyphicon-share
glyphicon glyphicon-log-in
glyphicon glyphicon-file
glyphicon glyphicon-edit
glyphicon glyphicon-star-empty
{% endblock %}