{% extends 'base.html' %}
{% load pagination_tags %}
{% block content %}
{% autopaginate articles 4 %}
	{% for article in articles %}
	<hr class="featurette-divider">
		<div class="article">
			<h1><a href="{% url 'blog.views.article_detail' pk=article.pk %}">{{ article.title }}</a></h1>
			<p class="date">created:{{ article.created_date|date:'d-m-y'}}</p>
			<p>{{ article.text| striptags | truncatechars:100 }}</p>
		</div>
	{% endfor %}
{% paginate %}
{% endblock %}