{% extends 'base.html' %}
{% load pagination_tags %}
{% block content %}
{% autopaginate article_list 4 %}
	{% for article in article_list %}
		<div class="article">
			<h1><a href="{% url 'blog.views.article_detail' pk=article.pk %}">{{ article.title }}</a></h1>
			<p>published: {{ article.published_date| date:'Y-m-d' }}</p>
			<p>{{ article.text | striptags | truncatechars:100 }}</p>
		</div>
	{% endfor %}
{% paginate %}
{% endblock %}