{% extends 'base.html' %}
{% block content %}
<div class="date">
	{% if article.published_date %}
		{{ article.published_date }}
	{% else %}
		{% if user.is_authenticated %}
			<a class="btn btn-default" href="{% url 'blog.views.article_publish' pk=article.pk %}">Publish</a>
		{% endif %}
	{% endif %}
	{% if user.is_authenticated %}
		<a class="btn btn-default" href="{% url 'article_edit' pk=article.pk %}"><span class="glyphicon glyphicon-pencil"></span>edit</a>
		<a class="btn btn-default" href="{% url 'article_remove' pk=article.pk %}"><span class="glyphicon glyphicon-remove"></span>remove</a>
	{% endif %}
</div>
	<h1>{{ article.title }}</h1>
	<p>{{ article.text | safe }}</p>
{% endblock %}
